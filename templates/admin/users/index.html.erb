<h1>Users</h1>
<section class="clearfix" ng-controller="UsersCtrl">

  <%= render partial: "search_bar", locals: { query: params[:search] } %>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= sortable "id" %></th>
        <th><%= sortable "name" %></th>
        <th><%= sortable "email" %></th>
        <th><%= sortable "role_id", "Role" %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% if @users.empty? %>
      <tr>
        <td>No user was found!</td>
      </tr>
    <% else %>
        <%= render @users %>
    <% end %>
    </tbody>
  </table>

  <%= paginate @users %>

</section>
